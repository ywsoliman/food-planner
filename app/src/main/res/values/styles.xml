<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="textHeading" parent="TextAppearance.AppCompat">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">22sp</item>
    </style>

    <style name="textSubheading" parent="TextAppearance.AppCompat">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="textBold" parent="TextAppearance.AppCompat">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="CustomDatePickerTheme" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="android:buttonBarPositiveButtonStyle">@style/CustomButtonStyle</item>
        <item name="android:buttonBarNegativeButtonStyle">@style/CustomButtonStyle</item>

    </style>

    <style name="CustomButtonStyle" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="AppSearchViewStyle" parent="Widget.AppCompat.SearchView">
        <item name="android:imeOptions">actionSearch</item>
        <item name="android:inputType">text</item>
        <item name="android:textColor">#000</item>
        <item name="android:textColorHint">#999</item>
        <item name="android:background">@drawable/search_view_background</item>
        <item name="android:searchIcon">@drawable/search</item>
        <item name="android:closeIcon">@drawable/close</item>
        <item name="android:queryHint">Search...</item>
    </style>
</resources>