<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="textHeading" parent="TextAppearance.AppCompat">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="textSubheading" parent="TextAppearance.AppCompat">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="textBold" parent="TextAppearance.AppCompat">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="textHeadingTemp">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">30sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">serif</item>
    </style>

    <style name="AppSearchViewStyle" parent="Widget.AppCompat.SearchView">
        <!-- Customize the color of the text -->
        <item name="android:imeOptions">actionSearch</item>
        <item name="android:inputType">text</item>
        <item name="android:textColor">#000</item>
        <!-- Customize the color of the hint text -->
        <item name="android:textColorHint">#999</item>
        <!-- Customize the background color -->
        <item name="android:background">@drawable/search_view_background</item>
        <!-- Customize the search icon -->
        <item name="android:searchIcon">@drawable/search</item>
        <!-- Customize the close icon -->
        <item name="android:closeIcon">@drawable/close</item>
        <!-- Customize the hint text -->
        <item name="android:queryHint">Search...</item>
    </style>
</resources>